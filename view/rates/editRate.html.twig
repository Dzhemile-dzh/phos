{% extends 'template/header.html.twig' %}

{% block title %}Edit Rate{% endblock %}

{% block content %}
    {% if message is defined %}
        <div class="alert alert-success">{{ message }}</div>
    {% endif %}

    <h2>Edit Rate</h2>

    <form method="post" action="">
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" name="date" class="form-control" id="date" value="{{ rate.date }}" required>
        </div>
        <div class="form-group">
            <label for="rate">Rate</label>
            <input type="number" name="rate" class="form-control" id="rate" value="{{ rate.rate }}" required>
        </div>
        <input type="hidden" name="id" value="{{ rate.id }}">
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
{% endblock %}
{% extends 'template/footer.html.twig' %}
